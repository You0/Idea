    <!--android:id="@+id/lv_item"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:background="@android:color/white"-->
    <!--android:divider="@android:color/transparent"-->
    <!--android:scrollbars="none">-->

    <!--</ListView>-->

</LinearLayout>