<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorHuise"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation = "vertical"
        android:layout_width="match_parent"
        android:background="@drawable/bg_littleconer"
        android:layout_height="match_parent"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/close"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_close_black_18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:text="以下用户您可能认识，希望您选择关注."
            />

        <android.support.v4.view.ViewPager
            android:id="@+id/user_grid"
            android:layout_width="match_parent"
            android:layout_height="292dp"
            android:layout_weight="0.60">

        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:id="@+id/ll_dots"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            ></LinearLayout>


        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/attention"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="一键关注"
                android:textColor="@color/white"
                android:background="@drawable/regist_button"
                android:layout_centerHorizontal="true"
                />

            <ImageButton
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_refresh_black_24dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/tv_more"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"

                android:layout_alignTop="@+id/more"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>



        <TextView
            android:id="@+id/selected"
            android:paddingTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffb37d"
            android:text="(已经选择了0人)" />
    </LinearLayout>




</LinearLayout>